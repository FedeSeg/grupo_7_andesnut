<!DOCTYPE html>
<html lang="es">
<head>

    <%- include('../partials/head') %>

</head>

<body>

    <%- include('../partials/header') %>

    <main>
        
            <section>
    
                <form action="/products/new" method="POST" enctype="multipart/form-data">
                    
                    <div class="input-container">
                        <label for="name">Producto</label>
                        <input type="text" name="name" id="name" required/>
                    </div>
                    <div class="input-container">
                        <label for="price250">Precio por 250g</label>
                        <input type="text" name="price250" id="price250" required/>
                    </div>
                    <div class="input-container">
                        <label for="price500">Precio por 500g</label>
                        <input type="text" name="price500" id="price500" required/>
                    </div>
                    <div class="input-container">
                        <label for="price1">Precio por 1Kg</label>
                        <input type="text" name="price1" id="price1" required/>
                    </div>
                    <div class="input-container">
                        <label for="beneficios">Beneficios</label>
                        <input type="text" name="beneficios" id="beneficios" required/>
                    </div>
                    <div class="input-container">
                        <label for="productImage">Seleccione una imagen</label>
                        <input type="file" name="productImage" id="productImage" required/>
                    </div>
                    <div class="input-container">
                        <button type="submit">ENVIAR</button>
                    </div>
                </form>
                
            </section>
        
    </main>

    <%- include('../partials/footer') %>

</body>
</html>